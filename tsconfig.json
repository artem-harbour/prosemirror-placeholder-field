{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "lib": ["es6", "dom", "esnext"],
    "strict": true,
    "skipLibCheck": true,
    "noEmit": true, //
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "declarationDir": ".",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    // "noImplicitAny": false,
  },
  "compileOnSave": true,
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"],
}
